{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension (CommitDiary)",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/packages/extension"
            ],
            "outFiles": [
                "${workspaceFolder}/packages/extension/dist/**/*.js"
            ],
            "preLaunchTask": "Build CommitDiary Extension"
        }
    ]
}